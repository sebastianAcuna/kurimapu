            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/lbl_emergencia_preliminar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/obs_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            app:layout_constraintTop_toBottomOf="@id/et_emergencia_preliminar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/et_emergencia_preliminar"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_obs_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:hint="@string/comentario" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/lbl_fotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fotos"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/padding"
            app:layout_constraintTop_toBottomOf="@id/obs_general"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_tomar_foto" />

        <Button
            android:id="@+id/btn_tomar_foto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tomar foto"
            android:drawableStart="@drawable/ic_arrow_back"
            android:layout_toEndOf="@id/btn_guardar"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/padding"
            app:layout_constraintTop_toBottomOf="@id/obs_general"
            app:layout_constraintStart_toEndOf="@id/lbl_fotos"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_listado_fotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_tomar_foto"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <Button
            android:id="@+id/btn_volver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nav_back"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:layout_toEndOf="@id/btn_guardar"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/padding"
            app:layout_constraintTop_toBottomOf="@id/rv_listado_fotos"
            app:layout_constraintEnd_toStartOf="@id/btn_guardar"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/nav_save"
            android:drawableStart="@drawable/ic_save"
            android:layout_margin="@dimen/padding"
            android:padding="@dimen/padding"
            app:layout_constraintTop_toBottomOf="@id/rv_listado_fotos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_volver" />

        <View
            android:id="@+id/divider_primero"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/btn_volver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/padding"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>