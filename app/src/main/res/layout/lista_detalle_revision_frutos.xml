<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/contenedor_adapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    android:padding="@dimen/padding_small"
    android:background="@drawable/rounded_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/lbl_conteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N° Conteo: "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tv_conteo"
        app:layout_constraintBottom_toBottomOf="@id/tv_conteo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_conteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1123123"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/lbl_conteo" />

    <TextView
        android:id="@+id/tv_comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="adasdadasd asdasd asd asdasdad asd asd ad asd asf adfafgasd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/tv_conteo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/divider_botonera"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="@dimen/padding_small"
        app:layout_constraintTop_toBottomOf="@id/tv_comentario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lbl_frutos_aptos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="N° frutos Aptos"
        android:layout_marginTop="@dimen/padding_small"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/divider_botonera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_frutos_aptos" />

    <TextView
        android:id="@+id/tv_frutos_aptos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="312312"
        android:layout_marginTop="@dimen/padding_small"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:gravity="end"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/divider_botonera"
        app:layout_constraintStart_toEndOf="@id/lbl_frutos_aptos"
        app:layout_constraintEnd_toStartOf="@id/lbl_frutos_no_aptos" />


    <TextView
        android:id="@+id/lbl_frutos_no_aptos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="N° frutos no Aptos"
        android:layout_marginTop="@dimen/padding_small"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/divider_botonera"
        app:layout_constraintEnd_toStartOf="@id/tv_frutos_no_aptos"
        app:layout_constraintStart_toEndOf="@id/tv_frutos_aptos" />

    <TextView
        android:id="@+id/tv_frutos_no_aptos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="312312"
        android:layout_marginTop="@dimen/padding_small"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:gravity="end"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/divider_botonera"
        app:layout_constraintStart_toEndOf="@id/lbl_frutos_no_aptos"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>