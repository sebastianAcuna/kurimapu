<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_small"
    android:layout_margin="@dimen/padding_small">

    <ImageView
        android:id="@+id/iv_gender"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_offtype"
        android:src="@drawable/mars_solid" />

    <TextView
        android:id="@+id/tv_offtype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="PLANTAS CON HOJAS MAS ALARGADAS"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/padding_small"
        app:layout_constraintBottom_toBottomOf="@id/iv_gender"
        app:layout_constraintEnd_toStartOf="@id/tv_cantidad"
        app:layout_constraintStart_toEndOf="@id/iv_gender" />

    <TextView
        android:id="@+id/tv_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_offtype" />

</androidx.constraintlayout.widget.ConstraintLayout>