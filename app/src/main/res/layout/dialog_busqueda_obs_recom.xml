<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <!-- empiezan fechas -->
        <Button
            android:id="@+id/btn_cancelar_muestra"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:text="Cerrar"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/lbl_est_feno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado fenologico"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/btn_cancelar_muestra"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_estado_fenologico"
            app:layout_constraintTop_toBottomOf="@id/lbl_est_feno"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <LinearLayout
            android:id="@+id/contenedor_buscador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sp_estado_fenologico"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/etBuscarOP"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:hint="Buscar..."
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:drawableStart="@android:drawable/ic_menu_search" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_listado_obs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:maxHeight="500dp"
            android:layout_marginTop="@dimen/padding"
            app:layout_constraintTop_toBottomOf="@id/contenedor_buscador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>