<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_small"
    android:layout_margin="2dp"
    android:background="@drawable/rounded_card">

    <TextView
        android:id="@+id/anexo_nov"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/especie_nov"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="AN-B0212"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/especie_nov"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/anexo_nov"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Pepino"
        android:textSize="12sp"
        android:gravity="end" />

    <TextView
        android:id="@+id/agricultor_nov"
        app:layout_constraintTop_toBottomOf="@id/anexo_nov"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="STA EUFEMIA ARRIENDO"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/lote_nov"
        app:layout_constraintTop_toBottomOf="@id/agricultor_nov"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="LA GRANJA"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/lbl_fecha_ultima_visita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/fecha_ultima_visita"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lote_nov"
        android:text="Fecha Ultima Visita: " />

    <TextView
        android:id="@+id/fecha_ultima_visita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorOnBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lbl_fecha_ultima_visita"
        app:layout_constraintTop_toBottomOf="@id/lote_nov"
        tools:text="24-04-2024" />

    <TextView
        android:id="@+id/lbl_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fecha_ultima_visita"
        android:text="usuario: " />

    <TextView
        android:id="@+id/usuario_nov"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorOnBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_usuario"
        app:layout_constraintEnd_toStartOf="@id/dias_nov"
        tools:text="Felipe Pedreros" />

    <TextView
        android:id="@+id/dias_nov"
        app:layout_constraintTop_toBottomOf="@id/lbl_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/usuario_nov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="14 dias"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_dark" />


</androidx.constraintlayout.widget.ConstraintLayout>