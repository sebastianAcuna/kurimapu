<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_visitas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:elevation="@dimen/padding"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
        android:id="@+id/lbl_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha  : "
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

        <TextView
            android:id="@+id/fecha_lista_visitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lbl_fecha"
            android:layout_alignParentTop="true"
            android:text="02-19-2020"
            android:textAppearance="?android:textAppearanceLarge"

            />

        <TextView
            android:id="@+id/lbl_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora  : "
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/fecha_lista_visitas"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/hora_lista_visitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lbl_hora"
            android:layout_alignParentTop="true"
            android:text="02-19-2020"
            android:textAppearance="?android:textAppearanceLarge"

            />
        <TextView
            android:id="@+id/lbl_agricultor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agricultor : "
            android:layout_below="@id/fecha_lista_visitas"
            android:layout_alignParentStart="true"
           />

        <TextView
            android:id="@+id/nombre_agricultor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE AGRICULTOR "
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_toEndOf="@id/lbl_agricultor"
            android:layout_below="@id/fecha_lista_visitas"
            android:layout_marginStart="0.5dp"
            android:textColor="@color/colorOnSurface"/>

        <TextView
            android:id="@+id/lbl_etapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etapa : "
            android:layout_below="@id/nombre_agricultor"
            android:layout_alignParentStart="true"/>


        <TextView
            android:id="@+id/nombre_etapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lbl_etapa"
            android:layout_marginStart="0.5dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_below="@id/nombre_agricultor"
            android:text="FLOWERING"
            android:textColor="@color/colorOnSurface"/>

        <TextView
            android:id="@+id/lbl_detalle_etapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle : "
            android:layout_below="@id/nombre_etapa"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/nombre_detalle_etapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRE-flowering"
            android:layout_toEndOf="@id/lbl_detalle_etapa"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginStart="0.5dp"
            android:layout_below="@id/nombre_etapa"
            android:textColor="@color/colorOnSurface"
            />


        <ImageView
            android:id="@+id/imagen_referencial"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="favoriteImage"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>