<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:elevation="@dimen/padding"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/lbl_agricultor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agricultor : "
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/nombre_agricultor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE AGRICULTOR "
            android:layout_toEndOf="@id/lbl_agricultor"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0.5dp"/>

        <TextView
            android:id="@+id/lbl_etapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etapa : "
            android:layout_below="@id/nombre_agricultor"
            android:layout_alignParentStart="true"/>


        <TextView
            android:id="@+id/nombre_etapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lbl_etapa"
            android:layout_marginStart="0.5dp"
            android:layout_below="@id/nombre_agricultor"
            android:text="FLOWERING"/>

        <TextView
            android:id="@+id/lbl_detalle_etapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle"
            android:layout_below="@id/nombre_etapa"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/nombre_detalle_etapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRE-flowering"
            android:layout_toEndOf="@id/lbl_detalle_etapa"
            android:layout_marginStart="0.5dp"
            android:layout_below="@id/nombre_etapa"
            />


        <ImageView
            android:id="@+id/imagen_referencial"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="favoriteImage"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>