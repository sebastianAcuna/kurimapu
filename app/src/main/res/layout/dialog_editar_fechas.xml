<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="16dp">


    <!-- empiezan fechas -->
   <TextView
       android:id="@+id/lbl_inicio_despano"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       app:layout_constraintHorizontal_weight="3"
       android:text="inicio despano"
       android:textSize="18sp"
       app:layout_constraintTop_toTopOf="@id/et_inicio_despano"
       app:layout_constraintBottom_toBottomOf="@id/et_inicio_despano"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/et_inicio_despano"

       />

    <EditText
        android:id="@+id/et_inicio_despano"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/lbl_inicio_despano"
        app:layout_constraintEnd_toEndOf="@id/lbl_inicio_despano"
        android:drawableStart="@drawable/ic_date_range"
        android:drawableTint="@color/colorPrimary"
        />

    <ImageView
        android:id="@+id/correo_envia_inicio_despano"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="3"
        android:src="@drawable/ic_baseline_email_24_no"
        app:layout_constraintTop_toTopOf="@id/et_inicio_despano"
        app:layout_constraintBottom_toBottomOf="@id/et_inicio_despano"
        app:layout_constraintStart_toEndOf="@id/et_inicio_despano"

        />


    <TextView
    android:id="@+id/cinco_porc_floracion"
        android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:layout_constraintHorizontal_weight="3"
    android:text="5% floracion"
    android:textSize="18sp"
    app:layout_constraintTop_toTopOf="@id/et_cinco_porc_floracion"
    app:layout_constraintBottom_toBottomOf="@id/et_cinco_porc_floracion"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/et_cinco_porc_floracion"
    />

    <EditText
        android:id="@+id/et_cinco_porc_floracion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/et_inicio_despano"
        app:layout_constraintStart_toEndOf="@id/cinco_porc_floracion"
        app:layout_constraintEnd_toStartOf="@id/correo_envia_cinco_porc_floracion"
        android:drawableStart="@drawable/ic_date_range"
        android:drawableTint="@color/colorPrimary"

        />

    <ImageView
        android:id="@+id/correo_envia_cinco_porc_floracion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="3"
        android:src="@drawable/ic_baseline_email_24_no"
        app:layout_constraintTop_toTopOf="@id/et_cinco_porc_floracion"
        app:layout_constraintBottom_toBottomOf="@id/et_cinco_porc_floracion"
        app:layout_constraintStart_toEndOf="@id/et_cinco_porc_floracion"

        />

    <TextView
        android:id="@+id/inicio_corte_seda"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:text="inicio corte seda"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/et_inicio_corte_seda"
        app:layout_constraintBottom_toBottomOf="@id/et_inicio_corte_seda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_inicio_corte_seda"
        />

    <EditText
        android:id="@+id/et_inicio_corte_seda"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/et_cinco_porc_floracion"
        app:layout_constraintStart_toEndOf="@id/inicio_corte_seda"
        app:layout_constraintEnd_toStartOf="@id/correo_envia_inicio_corte_seda"
        android:drawableStart="@drawable/ic_date_range"
        android:drawableTint="@color/colorPrimary"

        />

    <ImageView
        android:id="@+id/correo_envia_inicio_corte_seda"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="3"
        android:src="@drawable/ic_baseline_email_24_no"
        app:layout_constraintTop_toTopOf="@id/et_inicio_corte_seda"
        app:layout_constraintBottom_toBottomOf="@id/et_inicio_corte_seda"
        app:layout_constraintStart_toEndOf="@id/et_inicio_corte_seda"

        />

    <TextView
        android:id="@+id/inicio_cosecha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:text="inicio cosecha"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/et_inicio_cosecha"
        app:layout_constraintBottom_toBottomOf="@id/et_inicio_cosecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_inicio_cosecha"

        />

    <EditText
        android:id="@+id/et_inicio_cosecha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/et_inicio_corte_seda"
        app:layout_constraintStart_toEndOf="@id/inicio_cosecha"
        app:layout_constraintEnd_toStartOf="@id/correo_envia_inicio_cosecha"
        android:drawableStart="@drawable/ic_date_range"
        android:drawableTint="@color/colorPrimary"


        />

    <ImageView
        android:id="@+id/correo_envia_inicio_cosecha"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="3"
        android:src="@drawable/ic_baseline_email_24_no"
        app:layout_constraintTop_toTopOf="@id/et_inicio_cosecha"
        app:layout_constraintBottom_toBottomOf="@id/et_inicio_cosecha"
        app:layout_constraintStart_toEndOf="@id/et_inicio_cosecha"

        />

    <TextView
        android:id="@+id/termino_cosecha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:text="Termino cosecha"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/et_termino_cosecha"
        app:layout_constraintBottom_toBottomOf="@id/et_termino_cosecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_termino_cosecha"

        />

    <EditText
        android:id="@+id/et_termino_cosecha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/et_inicio_cosecha"
        app:layout_constraintStart_toEndOf="@id/termino_cosecha"
        app:layout_constraintEnd_toStartOf="@id/correo_envia_termino_cosecha"
        android:drawableStart="@drawable/ic_date_range"
        android:drawableTint="@color/colorPrimary"

        />

    <ImageView
        android:id="@+id/correo_envia_termino_cosecha"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="3"
        android:src="@drawable/ic_baseline_email_24_no"
        app:layout_constraintTop_toTopOf="@id/et_termino_cosecha"
        app:layout_constraintBottom_toBottomOf="@id/et_termino_cosecha"
        app:layout_constraintStart_toEndOf="@id/et_termino_cosecha"

        />


    <TextView
        android:id="@+id/termino_labores_post_cosecha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:text="Termino labores post cosecha"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/et_termino_labores_post_cosecha"
        app:layout_constraintBottom_toBottomOf="@id/et_termino_labores_post_cosecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_termino_labores_post_cosecha"
        />

    <EditText
        android:id="@+id/et_termino_labores_post_cosecha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/et_termino_cosecha"
        app:layout_constraintStart_toEndOf="@id/termino_labores_post_cosecha"
        app:layout_constraintEnd_toStartOf="@id/correo_envia_termino_labores_post_cosecha"
        android:drawableStart="@drawable/ic_date_range"
        android:drawableTint="@color/colorPrimary"
        />

    <ImageView
        android:id="@+id/correo_envia_termino_labores_post_cosecha"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="3"
        android:src="@drawable/ic_baseline_email_24_no"
        app:layout_constraintTop_toTopOf="@id/et_termino_labores_post_cosecha"
        app:layout_constraintBottom_toBottomOf="@id/et_termino_labores_post_cosecha"
        app:layout_constraintStart_toEndOf="@id/et_termino_labores_post_cosecha"
        />


  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/con_detalle_labores"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintHorizontal_weight="0.3"
      android:layout_margin="10dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
      android:hint="Detalle labores"
      app:layout_constraintTop_toBottomOf="@id/correo_envia_termino_labores_post_cosecha"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      >

   <com.google.android.material.textfield.TextInputEditText
       android:id="@+id/et_detalle_labores"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:inputType="textMultiLine"
       android:maxHeight="200dp"
       />
  </com.google.android.material.textfield.TextInputLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>