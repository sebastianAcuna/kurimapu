<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedor_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:padding="@dimen/padding_small"
        android:background="@drawable/rounded_card">

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="01-2012-2522"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/lbl_est_feno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Est. Fenologico"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_est_feno" />

        <TextView
            android:id="@+id/tv_est_feno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="SIEMBRA"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/lbl_est_feno" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_listado_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_est_feno"
            android:layout_marginTop="@dimen/padding_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="400dp"
            app:layout_constraintHeight_min="100dp" />

        <LinearLayout
            android:id="@+id/contenedor_botones_lista_fecha_siembra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_small"

            app:layout_constraintTop_toBottomOf="@id/rv_listado_detalle"

            >

            <Button
                android:visibility="invisible"
                android:id="@+id/btn_eliminar_detalle_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eliminar" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_editar_detalle_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editar" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>