<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_generico">


    <TextView
        android:id="@+id/titulo_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider1"
        android:text="NAME"
        android:gravity="center"
        android:tag="titulo_0"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/divider4"
        />

    <View
        android:id="@+id/divider1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/titulo_0"
        app:layout_constraintEnd_toStartOf="@id/titulo_1"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/divider4"/>

    <TextView
        android:id="@+id/titulo_1"
        android:tag="titulo_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/divider1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider2"
        android:text="DOSE"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/divider4"
        />


    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/titulo_1"
        app:layout_constraintEnd_toStartOf="@id/titulo_2"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/divider4"/>

    <TextView
        android:id="@+id/titulo_2"
        android:tag="titulo_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/divider2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider3"
        android:text="U.M."
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/divider4"

        />


    <View
        android:id="@+id/divider3"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/titulo_2"
        app:layout_constraintEnd_toStartOf="@id/titulo_3"
        app:layout_constraintBottom_toTopOf="@id/divider4"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/titulo_3"
        android:tag="titulo_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/divider3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider4"
        android:text="DATE"
        android:gravity="center"
        android:visibility="gone"
        />


    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/titulo_3"
        app:layout_constraintBottom_toTopOf="@id/valor_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray" />


    <TextView
        android:id="@+id/valor_0"
        android:tag="valor_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider1"
        android:text="QUIMICO"
        android:gravity="center"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/valor_1"
        android:tag="valor_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toEndOf="@id/divider1"
        app:layout_constraintEnd_toStartOf="@id/divider2"
        android:text="QUIMICO"
        android:gravity="center"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/valor_2"
        android:tag="valor_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toEndOf="@id/divider2"
        app:layout_constraintEnd_toStartOf="@id/divider3"
        android:text="QUIMICO"
        android:gravity="center"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/valor_3"
        android:tag="valor_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toEndOf="@id/divider3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="QUIMICO"
        android:gravity="center"
        android:visibility="gone"
        />




</androidx.constraintlayout.widget.ConstraintLayout>